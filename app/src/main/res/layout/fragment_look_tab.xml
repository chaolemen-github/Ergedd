<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_5">

    <ImageView
        android:id="@+id/iv_tab_img"
        android:scaleType="center"
        android:layout_width="@dimen/dp_180"
        android:layout_height="@dimen/dp_100"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_tab_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="@color/common_black"
        android:textSize="@dimen/sp_18"
        app:layout_constraintBottom_toTopOf="@id/tv_tab_text"
        app:layout_constraintLeft_toRightOf="@id/iv_tab_img"
        app:layout_constraintTop_toTopOf="@id/iv_tab_img" />

    <TextView
        android:id="@+id/tv_tab_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintBottom_toTopOf="@id/tv_tab_count"
        app:layout_constraintLeft_toRightOf="@id/iv_tab_img"
        app:layout_constraintTop_toBottomOf="@id/tv_tab_title" />

    <TextView
        android:id="@+id/tv_tab_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="@color/cardview_shadow_start_color"
        app:layout_constraintTop_toBottomOf="@id/tv_tab_text"
        app:layout_constraintBottom_toBottomOf="@id/iv_tab_img"
        app:layout_constraintLeft_toRightOf="@id/iv_tab_img" />


</android.support.constraint.ConstraintLayout>